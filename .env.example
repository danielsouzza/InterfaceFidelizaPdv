# ========================================
# CONFIGURAÇÃO DOS BANCOS DE DADOS
# ========================================
# IMPORTANTE: Renomeie este arquivo para .env e preencha com suas credenciais

# Banco do PDV (onde busca as notas - somente leitura)
DB_PDV_SERVER=localhost
DB_PDV_DATABASE=TesteNotas
DB_PDV_USER=SA
DB_PDV_PASSWORD=COLOQUE_SUA_SENHA_AQUI
DB_PDV_PORT=1433

# Banco da Aplicação (onde ficam NotasUsadas e PontuacaoPendente)
DB_APP_SERVER=localhost
DB_APP_DATABASE=TesteNotas
DB_APP_USER=SA
DB_APP_PASSWORD=COLOQUE_SUA_SENHA_AQUI
DB_APP_PORT=1433

# ========================================
# CONFIGURAÇÃO DA API FIDELIMAX
# ========================================
FIDELIMAX_BASE_URL=https://api.fidelimax.com.br/api/Integracao
FIDELIMAX_AUTH_TOKEN=COLOQUE_SEU_TOKEN_AQUI

# ========================================
# CONFIGURAÇÃO DO SERVIDOR
# ========================================
PORT=3001

# Intervalo de reprocessamento de pendentes (em minutos)
INTERVALO_REPROCESSAMENTO=5

# ========================================
# CONSULTAS SQL
# ========================================
# Query para buscar última venda do banco PDV
QUERY_LAST_SALE=SELECT TOP 1 numero_nota, valor FROM Notas ORDER BY data_nota DESC, id DESC
