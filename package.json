{
  "name": "interface-fideliza-pdv",
  "version": "1.0.0",
  "description": "Interface para sistema de fidelidade PDV",
  "main": "electron-main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "electron": "electron .",
    "electron:dev": "electron . --inspect",
    "build": "electron-builder build --win --publish never",
    "build:dir": "electron-builder build --win --dir",
    "build:linux": "electron-builder build --linux --dir"
  },
  "keywords": [
    "fidelidade",
    "pdv",
    "api"
  ],
  "author": "Sistema Fidelidade",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "mssql": "^12.0.0",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "electron": "^22.3.27",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.fidelizapdv.app",
    "productName": "Sistema Fidelidade PDV",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/electron/**/*",
      "!node_modules/electron-builder/**/*",
      "!dist/**/*",
      "!.git/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Sistema Fidelidade PDV"
    }
  }
}
