{
  "name": "interface-fideliza-pdv",
  "version": "1.0.0",
  "description": "Interface para sistema de fidelidade PDV",
  "main": "nw-main.js",
  "scripts": {
    "start": "node launcher.js",
    "dev": "nodemon server.js",
    "nw": "nw .",
    "nw:dev": "nw . --remote-debugging-port=9222",
    "build": "nwbuild --platforms win64 --buildDir dist .",
    "build:linux": "nwbuild --platforms linux64 --buildDir dist .",
    "electron": "electron .",
    "electron:dev": "electron . --inspect",
    "build:electron": "electron-builder build --win --publish never"
  },
  "window": {
    "title": "Sistema Fidelidade PDV",
    "width": 1400,
    "height": 900,
    "min_width": 600,
    "min_height": 400,
    "position": "center",
    "resizable": true,
    "show": false,
    "frame": true,
    "toolbar": false,
    "icon": "icon.png"
  },
  "chromium-args": "--disable-raf-throttling",
  "keywords": [
    "fidelidade",
    "pdv",
    "api"
  ],
  "author": "Sistema Fidelidade",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "mssql": "^12.0.0",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "electron": "^22.3.27",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.0.1",
    "nw": "^0.104.1",
    "nw-builder": "^4.16.0"
  },
  "build": {
    "appId": "com.fidelizapdv.app",
    "productName": "Sistema Fidelidade PDV",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/electron/**/*",
      "!node_modules/electron-builder/**/*",
      "!node_modules/nodemon/**/*",
      "!dist/**/*",
      "!.git/**/*",
      "!BUILD_INSTRUCTIONS.md",
      "!.gitignore",
      "!sql-config.json",
      ".env.example",
      "GUIA_INSTALACAO.md",
      "create-notas-usadas.sql",
      "criar_tabela_pontuacao_pendente.sql"
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Sistema Fidelidade PDV"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office",
      "maintainer": "Sistema Fidelidade"
    }
  }
}
